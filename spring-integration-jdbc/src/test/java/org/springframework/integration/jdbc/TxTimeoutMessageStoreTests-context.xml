	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
		<!-- <property name="defaultTimeout" value="2000" /> -->
		<!-- Postgres 9 does not support send timeouts. You may see an exception like:
		"java.sql.SQLFeatureNotSupportedException: Method org.postgresql.jdbc4.Jdbc4PreparedStatement.setQueryTimeout(int) is not yet implemented."
		-->
	</bean>

	<int:transaction-synchronization-factory id="syncFactory">
		<int:before-commit channel="loggit" />
	</int:transaction-synchronization-factory>

	<task:executor id="pool" pool-size="10" queue-capacity="10" rejection-policy="CALLER_RUNS" />

	<int-jdbc:message-store id="store" data-source="dataSource" />

	<bean id="store3" class="org.springframework.integration.jdbc.JdbcChannelMessageStore">
		<property name="dataSource" ref="dataSource"/>
		<property name="queryProvider">
			<bean class="org.springframework.integration.jdbc.messagestore.channel.DerbyQueryProvider"/>
		</property>
		<property name="region" value="TX_TIMEOUT"/>
	</bean>

	<bean id="store1" class="org.springframework.integration.store.SimpleMessageStore" />

	<int:channel id="inputChannel">
		<int:queue message-store="store3"/>
	</int:channel>

	<int:bridge input-channel="inputChannel" output-channel="outputChannel">
		<int:poller fixed-delay="500" receive-timeout="500"
			max-messages-per-poll="10" task-executor="pool">
			<int:transactional propagation="SUPPORTS" synchronization-factory="syncFactory"
				isolation="READ_UNCOMMITTED" transaction-manager="transactionManager" />
		</int:poller>
	</int:bridge>

	<int:channel id="outputChannel" />

	<bean id="sa" class="org.springframework.integration.jdbc.test.ServiceActivator"/>

	<int:service-activator input-channel="outputChannel" ref="sa"/>

	<int:channel id="errorChannel">
		<int:queue/>
		<int:interceptors>
			<int:wire-tap channel="loggit"/>
		</int:interceptors>
	</int:channel>

	<int:logging-channel-adapter id="loggit" log-full-message="true" level="ERROR"/>

</beans>

